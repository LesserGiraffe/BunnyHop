<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import net.seapanda.bunnyhop.common.TextFetcher?>

<MenuBar 
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="net.seapanda.bunnyhop.control.MenuBarController"
  fx:id="menuBar">
  <fx:define>
    <TextFetcher fx:id="fileText" textId="gui,menu-bar,file"/>
    <TextFetcher fx:id="loadText" textId="gui,menu-bar,load"/>
    <TextFetcher fx:id="saveText" textId="gui,menu-bar,save"/>
    <TextFetcher fx:id="saveAsText" textId="gui,menu-bar,save-as"/>
    <TextFetcher fx:id="operationText" textId="gui,menu-bar,operation"/>
    <TextFetcher fx:id="freeMemoryText" textId="gui,menu-bar,free-memory"/>
    <TextFetcher fx:id="settingsText" textId="gui,menu-bar,settings"/>
    <TextFetcher fx:id="focusSimulatorText" textId="gui,menu-bar,focus-simulator"/>
    <TextFetcher fx:id="focusSimulatorOnChangedText" textId="gui,menu-bar,focus-simulator-on-changed"/>
    <TextFetcher fx:id="helpText" textId="gui,menu-bar,help"/>
    <TextFetcher fx:id="versionInfoText" textId="gui,menu-bar,version-info"/>
  </fx:define>
  <menus>
    <Menu text="$fileText.text">
      <items>
        <MenuItem fx:id="load" text="$loadText.text"/>
        <MenuItem fx:id="save" text="$saveText.text"/>
        <MenuItem fx:id="saveAs" text="$saveAsText.text"/>
      </items>
    </Menu>
    <Menu text="$operationText.text">
      <items>
        <MenuItem fx:id="freeMemory" text="$freeMemoryText.text"/>
      </items>
    </Menu>
      <Menu text="$settingsText.text">
      <items>
        <MenuItem fx:id="focusSimulator" text="$focusSimulatorText.text"/>
      </items>
      <items>
        <MenuItem fx:id="focusSimulatorOnChanged" text="$focusSimulatorOnChangedText.text"/>
      </items>
    </Menu>
    <Menu text="$helpText.text">
      <items>
        <MenuItem fx:id="versionInfo" text="$versionInfoText.text"/>
      </items>
    </Menu>
  </menus>
</MenuBar>
