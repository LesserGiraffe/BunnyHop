<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import net.seapanda.bunnyhop.common.text.TextFetcher?>

<Tab
  xmlns:fx="http://javafx.com/fxml"
  fx:id="debugTab"
  fx:controller="net.seapanda.bunnyhop.debugger.control.DebugViewController"
  text="$debugViewName.text">
  <fx:define>
    <TextFetcher fx:id="debugViewName" textId="gui,notification-view,debug-view-name"/>
  </fx:define>
  <SplitPane
    fx:id="debugViewSplitPane"
    dividerPositions="0.33,0.66">

    <VBox fx:id="callStackVBox">
      <ScrollPane
        fx:id="callStackScrollPane"
        HbarPolicy="AS_NEEDED"
        VbarPolicy="NEVER"
        FitToWidth="true"
        FitToHeight="true"
        VBox.vgrow="ALWAYS"
        HBox.hgrow="ALWAYS">
      </ScrollPane>
    </VBox>

    <VBox>
      <ScrollPane
        fx:id="localVarScrollPane"
        HbarPolicy="AS_NEEDED"
        VbarPolicy="AS_NEEDED"
        FitToWidth="true"
        FitToHeight="true"
        VBox.vgrow="ALWAYS"
        HBox.hgrow="ALWAYS">
      </ScrollPane>
    </VBox>

    <VBox>
      <ScrollPane
        fx:id="globalVarScrollPane"
        HbarPolicy="AS_NEEDED"
        VbarPolicy="AS_NEEDED"
        FitToWidth="true"
        FitToHeight="true"
        VBox.vgrow="ALWAYS"
        HBox.hgrow="ALWAYS">
      </ScrollPane>
    </VBox>
  </SplitPane>
</Tab>
