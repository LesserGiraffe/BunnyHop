<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import net.seapanda.bunnyhop.common.text.TextFetcher?>
<?import net.seapanda.bunnyhop.ui.view.Rem?>

<fx:root
  xmlns:fx="http://javafx.com/fxml"
  fx:id="variableInspectionViewBase"
  type="VBox">
  <fx:define>
    <TextFetcher fx:id="jump" textId="gui,debugger,variable-inspection,jump"/>
    <TextFetcher fx:id="search" textId="gui,debugger,variable-inspection,search"/>
    <TextFetcher fx:id="searchTooltip" textId="gui,debugger,variable-inspection,tooltip,search"/>
    <TextFetcher fx:id="reloadTooltip" textId="gui,debugger,variable-inspection,tooltip,reload"/>
    <Rem fx:id="btnSize" rem="1.25"/>
  </fx:define>

  <HBox fx:id="viHbox">
    <Label fx:id="viViewName"> </Label>

    <CheckBox
      fx:id="viJumpCheckBox"
      styleClass="flatCheckBox"
      selected="true"
      text="$jump.text">
    </CheckBox>

    <Button fx:id="viSearchButton" text="$search.text" styleClass="flatButton">
      <tooltip>
        <Tooltip text="$searchTooltip.text" styleClass="uiFunctionTooltip"/>
      </tooltip>
    </Button>

    <Button fx:id="viReloadBtn" styleClass="flatButton">
      <graphic>
        <ImageView>
          <Image url="@../images/reload.png" smooth="true" requestedWidth="$btnSize.rem" requestedHeight="$btnSize.rem"/>
        </ImageView>
      </graphic>
      <tooltip>
        <Tooltip text="$reloadTooltip.text" styleClass="uiFunctionTooltip"/>
      </tooltip>
    </Button>

  </HBox>
  <TreeView
    fx:id="variableTreeView"
    VBox.vgrow="ALWAYS"/>
</fx:root>
